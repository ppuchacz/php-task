<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Payroll\Domain\Model\Employee">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" length="50" />
        <field name="surname" type="string" length="50" />
        <field name="remunerationBase" type="decimal" scale="5" precision="2" />
        <many-to-one field="department" target-entity="App\Payroll\Domain\Model\Department">
            <join-column nullable="false" />
        </many-to-one>
        <field name="jobStartDate" type="datetime" />
    </entity>

</doctrine-mapping>