<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Payroll\Domain\Model\Department">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" length="50" />
        <field name="bonusType" type="string" enum-type="App\Payroll\Domain\Model\BonusType" length="50" />
        <field name="maxBonusYears" type="integer" />
        <field name="bonusAmount" type="integer" />
    </entity>

</doctrine-mapping>